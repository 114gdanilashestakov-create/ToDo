<Window x:Name="Registration1" x:Class="Desktop.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="365*"/>
        </Grid.RowDefinitions>
        <Button x:Name="SubmitButton" Content="Зарегестрироваться" HorizontalAlignment="Left" Margin="463,258,0,0" VerticalAlignment="Top" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Click="SubmitButton_Click" Height="37" Width="228" FontSize="16" Grid.Row="1" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10 10 5 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="CloseButton" Content="Назад" HorizontalAlignment="Left" Margin="463,300,0,0" VerticalAlignment="Top" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Height="34" Width="228" FontSize="16" Click="CloseButton_Click" Grid.Row="1" Grid.ColumnSpan="2"  >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5 5 10 10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image HorizontalAlignment="Left" Height="181" Margin="37,31,0,0" VerticalAlignment="Top" Width="209" Source="/5391009552729765759.jpg" Grid.RowSpan="2"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="463,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" BorderBrush="White" Foreground="#FF959090" Text="Введите имя пользователя" TextChanged="TextBox_TextChanged" Grid.Row="1"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="463,85,0,0" TextWrapping="Wrap" Text="exam@yandex.ru" VerticalAlignment="Top" Width="120" BorderBrush="White" Foreground="#FF959090" TextChanged="TextBox_TextChanged_1" Grid.Row="1"/>
        <Label Content="Welcome back" HorizontalAlignment="Left" Margin="463,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="463,66,0,0" VerticalAlignment="Top" FontSize="18" Grid.RowSpan="2"/>
        <Label Content="Ваша почта" HorizontalAlignment="Left" Margin="463,54,0,0" VerticalAlignment="Top" FontSize="18" Grid.Row="1"/>
        <Border BorderBrush="#FF959090" BorderThickness="1" Margin="463,108,65,256" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Border BorderBrush="#FF959090" BorderThickness="1" Margin="463,54,65,310" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="PasswordBox1" HorizontalAlignment="Left" Margin="463,142,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="120" BorderBrush="White" Foreground="#FF959090" Grid.Row="1"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="463,111,0,0" VerticalAlignment="Top" FontSize="18" Grid.Row="1"/>
        <Border BorderBrush="#FF959090" BorderThickness="1" Margin="463,165,65,199" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="PasswordBox2" HorizontalAlignment="Left" Margin="463,200,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="120" BorderBrush="White" Foreground="#FF959090" Grid.Row="1"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="463,169,0,0" VerticalAlignment="Top" FontSize="18" Grid.Row="1"/>
        <Border BorderBrush="#FF959090" BorderThickness="1" Margin="463,223,65,141" Grid.Row="1" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
