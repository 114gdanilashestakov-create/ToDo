        <Label Content="Почта" HorizontalAlignment="Left" Margin="463,118,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="463,194,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Border BorderBrush="#FF959090" BorderThickness="1" Margin="463,248,65,191"/>
        <Border BorderBrush="#FF959090" BorderThickness="1" Margin="463,180,65,259"/>

    </Grid>
